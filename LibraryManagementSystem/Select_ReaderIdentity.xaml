<Window x:Class="LibraryManagementSystem.Select_ReaderIdentity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="选择读者身份" Height="450" Width="800">
    <Grid>
        <Label Content="请选择读者身份" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Width="136" Height="39" FontSize="16"/>
        <RadioButton x:Name="RB_Student" Content="学生" GroupName="Identity" HorizontalAlignment="Center" Margin="0,151,0,0" VerticalAlignment="Top" Height="35" FontSize="14" Width="136"/>
        <RadioButton x:Name="RB_Teacher" Content="老师" GroupName="Identity" HorizontalAlignment="Center" Margin="0,203,0,0" VerticalAlignment="Top" Height="32" FontSize="14" Width="136"/>
        <Button x:Name="btn_Resiger" Content="读者注册" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Height="34" Width="108" Click="btn_Resiger_Click"/>
        <Button x:Name="btn_ShowReaderInfo" Content="读者信息" HorizontalAlignment="Center" Margin="0,336,0,0" VerticalAlignment="Top" Height="34" Width="108" Click="btn_ShowReaderInfo_Click"/>
    </Grid>
</Window>

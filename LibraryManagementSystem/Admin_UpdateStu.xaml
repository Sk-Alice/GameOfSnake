        <Label Content="专业" HorizontalAlignment="Left" Margin="165,265,0,0" VerticalAlignment="Top"/>
        <Label Content="可借阅数量" HorizontalAlignment="Left" Margin="386,107,0,0" VerticalAlignment="Top"/>
        <Label Content="原密码" HorizontalAlignment="Left" Margin="398,160,0,0" VerticalAlignment="Top"/>
        <Label Content="新密码" HorizontalAlignment="Left" Margin="399,214,0,0" VerticalAlignment="Top"/>
        <Label Content="确认密码" HorizontalAlignment="Left" Margin="394,264,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_StuBNum" HorizontalAlignment="Left" Height="23" Margin="490,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_StuName" HorizontalAlignment="Left" Height="23" Margin="231,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_StuId" HorizontalAlignment="Left" Height="22" Margin="231,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />

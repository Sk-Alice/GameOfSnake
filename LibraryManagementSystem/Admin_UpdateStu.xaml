        <PasswordBox x:Name="pwd_First" HorizontalAlignment="Left" Margin="490,214,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <PasswordBox x:Name="pwd_Second" HorizontalAlignment="Left" Margin="490,265,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Button x:Name="btn_Update" Content="修改" HorizontalAlignment="Left" Margin="276,365,0,0" VerticalAlignment="Top" Width="75" Click="btn_Update_Click"/>
        <Button x:Name="btn_Back" Content="返回" HorizontalAlignment="Left" Margin="404,365,0,0" VerticalAlignment="Top" Width="75" Click="btn_Back_Click"/>

<Window x:Class="LibraryManagementSystem.Admin_UpdateStu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="更新学生信息" Height="450" Width="800">
    <Grid>
        <GroupBox Header="学生信息" HorizontalAlignment="Left" Height="308" Margin="149,43,0,0" VerticalAlignment="Top" Width="491"/>
        <Label Content="姓名" HorizontalAlignment="Left" Margin="166,108,0,0" VerticalAlignment="Top"/>
        <Label Content="学号" HorizontalAlignment="Left" Margin="166,158,0,0" VerticalAlignment="Top"/>
